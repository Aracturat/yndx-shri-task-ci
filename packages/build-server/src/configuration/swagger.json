{
  "openapi": "3.0.1",
  "info": {
    "title": "School CI API (Build Server)",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/notify-agent": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentConfig"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentConfig"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AgentConfig"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/notify-build-result": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BuildResult"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BuildResult"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BuildResult"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AgentConfig": {
        "required": [
          "host",
          "port"
        ],
        "type": "object",
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "BuildStatus": {
        "enum": [
          "Waiting",
          "InProgress",
          "Success",
          "Fail",
          "Canceled"
        ],
        "type": "string"
      },
      "BuildResult": {
        "required": [
          "id",
          "status",
          "log"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/BuildStatus"
              }
            ]
          },
          "log": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
