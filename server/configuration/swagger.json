{
  "openapi": "3.0.1",
  "info": {
    "title": "School CI API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/builds": {
      "get": {
        "tags": [
          "Builds"
        ],
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 25
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BuildArray"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildArray"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildArray"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{buildId}": {
      "get": {
        "tags": [
          "Builds"
        ],
        "parameters": [
          {
            "name": "buildId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{buildId}/logs": {
      "get": {
        "tags": [
          "Builds"
        ],
        "parameters": [
          {
            "name": "buildId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BuildLog"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildLog"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildLog"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{commitHash}": {
      "post": {
        "tags": [
          "Builds"
        ],
        "parameters": [
          {
            "name": "commitHash",
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              }
            }
          }
        }
      }
    },
    "/settings": {
      "get": {
        "tags": [
          "Settings"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Settings"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Settings"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Settings"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Settings"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Settings"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Settings"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Settings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "delete": {
        "tags": [
          "Settings"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BuildStatus": {
        "enum": [
          "Waiting",
          "InProgress",
          "Success",
          "Fail",
          "Canceled"
        ],
        "type": "string"
      },
      "Build": {
        "required": [
          "authorName",
          "branchName",
          "buildNumber",
          "commitHash",
          "commitMessage",
          "id",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "buildNumber": {
            "type": "integer",
            "format": "int32"
          },
          "commitMessage": {
            "type": "string"
          },
          "commitHash": {
            "type": "string"
          },
          "branchName": {
            "type": "string"
          },
          "authorName": {
            "type": "string"
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/BuildStatus"
              }
            ]
          },
          "start": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "duration": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "BuildLog": {
        "required": [
          "text"
        ],
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "BuildArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Build"
        },
        "nullable": true
      },
      "Settings": {
        "required": [
          "buildCommand",
          "mainBranch",
          "period",
          "repoName"
        ],
        "type": "object",
        "properties": {
          "repoName": {
            "type": "string"
          },
          "buildCommand": {
            "type": "string"
          },
          "mainBranch": {
            "type": "string"
          },
          "period": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
